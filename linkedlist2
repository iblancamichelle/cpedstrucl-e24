#include<iostream>
#include<conio.h>
using namespace std;

class LinkedList{
    struct Node {			//declaration structure Node	
        int x;			
        Node *next;			 //node pointer *next
    };

public:
    LinkedList(){
        head = NULL;
    }

    void addValue(int val){			
        Node *n = new Node();   		
        n->x = val;             	
        n->next = head;         	
                               
        head = n;              
    }

    int popValue(){
        Node *n = head;				
        int ret = n->x;					

        head = head->next;				
        delete n;						
        return ret;
    }
    

private:
    Node *head; 
};



int main(){
	
	LinkedList list;
	int choice, num, flag;
	int count = 0;
	
	do{
	system("cls");
	cout<<"\nMAIN MENU";
	cout<<"\n[1] Linked List";
	cout<<"\n[2] Pop";
	cout<<"\n[3] EXIT";
	
	cout<<"\nEnter choice: ";
	cin>>choice;
	
	switch(choice)
	{
		case 1:	cout<<"Enter number:";
				cin>>num;
				list.addValue(num);
				flag = count + 1;
		break;
				
		case 2: if (flag>0){
				list.popValue();
				flag--;
				cout<< list.popValue();
				}
				else {
					cout<<"\n(EMPTY)";
				}
		break;
		case 3: return 0; break;
		default: cout<<"Wrong input. Try again!";
				 
	}
	
	} while(choice<4);
}
